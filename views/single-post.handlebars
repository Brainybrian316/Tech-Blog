{{!-- single post for logged in user --}}
{{> post-info post }}

{{!-- if logged in can comment --}}
{{#if loggedIn }}
<section class="mt-5 border-bottom border-dark">
    <h6>Add Comment:</h6>
    <form class="create-comment-form">
        <div class="form-group">
            <div class="row px-5 mb-5">
                <input type="text" id="comment-content" name="comment-content" placeholder="Your comment..." required />
                <button type="submit" class="btn btn-primary mt-3">Add Comment</button>
            </div>
        </div>
    </form>
</section>
{{/if}} 

